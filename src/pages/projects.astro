---
import Main from '../layouts/Main.astro';
import Cards from '../components/Cards.astro';
---

<Main title="Tech Stack">
  <div class="" transition:name="cards">
    <Cards
      cards={[
        {
          title: 'Technology I possess',
          gradientFrom: '#818cf8',
          gradientTo: '#d8b4fe',
          to: '/techStack',
        },
        {
          title: 'A summary of my work history',
          gradientFrom: '#fde68a',
          gradientTo: '#fca5a5',
          to: '/work-summary',
        },
        {
          title: 'What I do beyond technology',
          gradientFrom: '#6ee7b7',
          gradientTo: '#9333ea',
          to: '/beyond-tech',
        },
      ]}
    />
  </div>
</Main>
