---
import type { MarkdownLayoutProps } from 'astro';
import Main from './Main.astro';

type Props = MarkdownLayoutProps<{
  title: string;
  subtitle: string;
  poster: string;
}>;

const { title, subtitle, poster } = Astro.props.frontmatter;
---

<Main title="Ruslana Avramova | Blog">
  <figure class="figure">
    <img
      src={poster}
      alt="img"
      width="100%"
      height="480px"
      class="figure-img"
    />
    <figcaption class="figure-caption">
      Poster image for {title.toLocaleLowerCase()}
    </figcaption>
  </figure>

  <h1>{title}</h1>
  <h2>{subtitle}</h2>
  <slot />
</Main>

<style>
  h1 + h2 {
    margin-bottom: 3rem;
  }

  .figure {
    margin: 0;
  }

  .figure-img {
    max-width: 100%;
    border-radius: 10px;
  }

  .figure-caption {
    font-size: 0.9rem;
  }
</style>
